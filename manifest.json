{
  "manifest_version": 3,
  "name": "Aether",
  "version": "0.1.0",
  "description": "A unified memory layer for LLMs to maintain and share context across chats and tools.",
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "huggingface/Xenova/all-MiniLM-L6-v2/*",
        "wasm/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-eval' 'unsafe-eval'; connect-src 'self'; object-src 'self'"
  }
}
